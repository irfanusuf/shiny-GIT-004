@{
    ViewData["Title"] = "Login";
}

<style>
  
    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }
    label {
        display: block;
        font-weight: bold;
    }
    input {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .btn {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
        width: 100%;
        margin-top: 10px;
    }
    .error {
        color: red;
        margin-bottom: 10px;
    }
    .success {
        color: green;
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <h2>Login</h2>

    @if (ViewData["ErrorMessage"] != null)
    {
        <p class="error">@ViewData["ErrorMessage"]</p>
    }
    @if (ViewData["SuccessMessage"] != null)
    {
        <p class="success">@ViewData["SuccessMessage"]</p>
    }

    <form method="post" >
        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="Email" required>
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="Password" required>
        </div>
        <button type="submit" class="btn">Login</button>
    </form>
</div>
