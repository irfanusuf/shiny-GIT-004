@model WebApplication1.Models.ViewModel.HybridViewModel;


<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-7">
                @* space for image *@
            </div>
        </div>
    </div>
</div>

<div class="untree_co-section product-section before-footer-section">

    <div class="container">
        <div class="row">


            <div class="col-12 col-md-4 col-lg-3 mb-5">

                <a class="product-item" asp-controller="Product" asp-action="Details" asp-route-id="">
                    <img src="~/images/product-3.png" class="img-fluid product-thumbnail">
                </a>
            </div>


            <div class="col-12 col-md-8 col-lg-9 mb-5">

                <h3> @Model.Product.ProductTitle </h3>

                @if (@Model.Product.IsArchived)
                {
                    <p style="color: red;"> Product Unavailable </p>
                }
                else
                {
                    <p> Available : <span>@Model.Product.Qty </span> </p>

                }

                <div style="min-height: 300px;">
                    <p> @Model.Product.Description</p>
                </div>


                <div class="mb-4">

                    <h4> $ @Model.Product.Price</h4>
                </div>




                @if (@Model.Product.IsArchived == false)
                {

                    <div>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="AddToCart"
                            asp-route-ProductId="@Model.Product.ProductId"> Add To cart </a>
                        <a class="btn btn-secondary"> Order Now </a>
                    </div>

                }


            </div </div>
        </div>
    </div>


</div>


