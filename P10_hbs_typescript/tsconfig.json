{
  "compilerOptions": {
    "target": "ES2020",                           // Modern JS features
    "module": "ES2022",                           // Use ES module system
    "moduleResolution": "Node",                   // Resolve like Node.js
    "outDir": "./build",                           // Output directory
    "rootDir": "./src",                           // Source files location
    "esModuleInterop": true,                      // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,         // Helps with default import support
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
